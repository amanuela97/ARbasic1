<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/sceneform_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#BA2C6DBD"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bottle_iv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bottle"
                android:layout_marginEnd="3dp"
                android:contentDescription="@string/bottle_image" />
            <ImageView
                android:id="@+id/pikachu_iv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:src="@drawable/pikachu"
                android:contentDescription="@string/pikachu_image" />
            <ImageView
                android:id="@+id/charmander_iv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:src="@drawable/charmander"
                android:contentDescription="@string/charmander_image" />
            <TextView
                android:id="@+id/hello_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="#040303"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginEnd="3dp"
                android:text="@string/hello_world"
                android:contentDescription="@string/bulba_image" />

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>